<!DOCTYPE html>
<html>
  <head>
    <title>WgsTicketing</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="ui top attached demo menu">
	  <a class="item">
	    <i class="sidebar icon"></i> Menu
	  </a>
	  <div class="right menu">
	    <% if user_signed_in? %>
	      <a class="item"><%= current_user.username %></a>
	      <%= link_to "logout", destroy_user_session_path, class: "item", method: :delete %>
	    <% end %>
	  </div>
	</div>

	<div class="ui bottom attached segment">
	  <div class="ui inverted labeled icon left inline vertical demo sidebar menu">
	    <a class="item">
	      <i class="home icon"></i> Home
	    </a>
	    <a class="item">
	      <i class="block layout icon"></i> Topics
	    </a>
	    <a class="item">
	      <i class="smile icon"></i> Friends
	    </a>
	    <a class="item">
	      <i class="calendar icon"></i> History
	    </a>
	  </div>
	  <div class="pusher">
	    <div class="ui basic segment">
	      <%= yield %>
	    </div>
	  </div>
	</div>

  </body>
</html>
