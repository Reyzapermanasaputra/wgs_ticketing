<!DOCTYPE html>
<html>
  <head>
    <title>WgsTicketing</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application'%>
    <%= javascript_include_tag "//www.google.com/jsapi", "chartkick" %>
    <script src="https://cdn.rawgit.com/mdehoog/Semantic-UI/6e6d051d47b598ebab05857545f242caf2b4b48c/dist/semantic.min.js"></script>
    <script src="http://maps.googleapis.com/maps/api/js?key=AIzaSyDqQrCI7plJ-7lw2nIIW48ivtqTWelSKzs
&sensor=false&amp;libraries=places"></script>
    
  </head>

<body>
  <% if params[:controller] == "devise/sessions" || params[:controller] == 'devise/invitations' &&  params[:action] == "edit"	|| params[:controller] == "devise/passwords" && params[:action] == "new" 	|| params[:controller] == "devise/passwords" && params[:action] == "create" || params[:controller] == "devise/passwords" && params[:action] == "edit"	|| params[:controller] == "devise/passwords" && params[:action] == "update" || params[:controller] == "devise/invitations" && params[:action] == "update" %>
      <%= yield %>
  <% else %>
    <div class="ui sidebar vertical left menu overlay visible" style="-webkit-transition-duration: 0.1s; overflow: visible !important;">
		  <div class="item logo">
		    WGS
		  </div>
		  <% if current_user.role.name.eql? "Project Manager" %>
			  <div class="ui accordion">
			    <a class="title item">Master  <i class="dropdown icon"></i></a>
			    <div class="content active">
			    	<a class="item transition visible <%= 'active' if params[:controller].eql?("dashboard") %>" href="/">Dashboard</a>
			      <a class="item transition visible <%= 'active' if params[:controller].eql?("roles") %>" href="/roles">Manage Roles</a>
		        <a class="item transition visible <%= 'active' if params[:controller].eql?("user_profiles") %>" href="/user_profiles">Manage Users</a>
		        <a class="item transition visible <%= 'active' if params[:controller].eql?("projects") %>" href="/projects">Manage Projects</a>
			    </div>
			   </div>
		   <% else %>
		     <div class="ui accordion">
				    <a class="title item">Boards  <i class="dropdown icon"></i></a>
				    <div class="content active">
				      <% current_user.projects.each do |project| %>
					      <a class="item" href="/projects/<%= project.id %>/tickets"><%= project.name %></a>
					    <% end %>
			      </div>
			   </div>
		    <% end %>
		  <div class="ui dropdown item displaynone">
		    <z>Dashboard</z>
		    <i class="icon demo-icon heart icon-heart"></i>

		    <div class="menu">
		      <div class="header">
		        Dashboard
		      </div>
		      <div class="ui divider"></div>
		      <a class="item" href="dashboard.html">Dashboard
		                    </a>
		    </div>
		  </div>
		  <div class="ui dropdown item displaynone">
		    <z>Layout</z>
		    <i class="icon demo-icon world icon-globe"></i>

		    <div class="menu">
		      <div class="header">
		        Layout
		      </div>
		      <div class="ui divider"></div>
		      <a class="item" href="inbox.html">Inbox
		                    </a>
		      <a class="item" href="mail.html">Mailbox
		                    </a>
		      <a class="item" href="chat.html">Chat
		                    </a>
		      <a class="item" href="contacts.html">Contacts
		                    </a>
		      <a class="item" href="photoeditor.html">Photo Editor
		                    </a>
		      <a class="item" href="calendar.html">Calendar
		                    </a>
		      <a class="item" href="filter.html">Filter
		                    </a>
		      <a class="item" href="todo.html">Todo
		                    </a>
		    </div>
		  </div>
		  <div class="ui dropdown item displaynone">
		    <z>Pages</z>
		    <i class="icon demo-icon  icon-params alarm"></i>

		    <div class="menu">
		      <div class="header">
		        Layouts
		      </div>
		      <div class="ui divider"></div>
		      <a class="item" href="sidebar.html">Sidebar
		                    </a>
		      <a class="item" href="menu.html">Nav
		                    </a>
		      <a class="item" href="animatedicon.html">Animated Icon
		                    </a>
		      <a class="item" href="box.html">Box
		                    </a>
		      <a class="item" href="cards.html">Cards
		                    </a>
		      <a class="item" href="color.html">Colors
		                    </a>
		      <a class="item" href="comment.html">Comment
		                    </a>
		      <a class="item" href="embed.html">Embed
		                    </a>
		      <a class="item" href="faq.html">Faq
		                    </a>
		      <a class="item" href="feed.html">Feed
		                    </a>
		      <a class="item" href="gallery.html">Gallery
		                    </a>
		      <a class="item" href="grid.html">Grid
		                    </a>
		      <a class="item" href="header.html">Header
		                    </a>
		      <a class="item" href="timeline.html">Timeline
		                    </a>
		      <a class="item" href="message.html">Message
		                    </a>
		      <a class="item" href="price.html">Price
		                    </a>
		    </div>
		  </div>
		</div>
		<div class="pusher">
		  <div class="ui menu asd borderless" style="border-radius: 0!important; border: 0; margin-left: 260px; -webkit-transition-duration: 0.1s; <%= 'padding-left: 20px;' if params[:controller] == 'tickets' %>">
		    <a class="item openbtn">
		      <i class="icon content"></i>
		    </a>
		    <a class="item" href="/">Dashboard</a>
		    <div class="right menu">
		    <%= link_to "#{current_user.username} (#{current_user.role.code})", user_profile_path(current_user.id), class: "item" %>
					<!-- <div class="ui custom basic">
						<div class="menu">
							<div id="notifications_count_<%= current_user.id %>">
							  <a class="item"><i class="bell outline large icon"></i>
							  	<div id="count"><%= current_user.notifications.unread.count %></div>
							  </a>
						  </div>
						</div>
					</div> -->

					<% if current_user.notifications.unread.blank? %>
					   <div class="item">
					     <i class="bell large outline icon"></i>
					     <div class="ui teal circular mini label"><%= current_user.notifications.unread.count %></div>
					     <div class="ui wide notification popup bottom right transition ">
					     <div class="ui link celled selection list"  style ="width: 350px;">
					       <div class='item'>
					        <div class='content'>
					          <div class='description'>Yay!! You not have notifications</div>
					          <div class='extra'></div>
					        </div>
					      </div>
					    </div>
					    <div style="text-align: center"><%= link_to "Show All Notification" %></div>
					  </div>
					</div>  
					<% else %> 
					<div class="item">
				    <i class="bell large outline icon"></i>
				    <div class="ui teal circular mini label"><%= current_user.notifications.unread.count %></div>
				      <div class="ui wide notification popup bottom right transition ">
				      	<% current_user.notifications.unread.order("created_at DESC").limit(5).each_with_index do |notification, index| %>
								  <div id="user_notification_<%= notification.id %>">
								  	<div class="ui link celled selection list"  style ="width: 350px;">
					           <div class='item' style="padding: 20px;">
					             <div class='content'>
							          <a class='header'><%= notification.actor.username %></a>
							          <span class='time'><%= time_ago_in_words(notification.created_at) %></span>          
							          <div class='description'><%= notification.action %> !</div>
					             </div>
					            </div>
					    			</div>
									</div>
									<br />
									<% end %>
									<div style="text-align: center"><%= link_to "Show All Notification", notifications_path %></div>
						  </div>
					</div>
					<% end %>
		      <div class="ui dropdown item">
		          &nbsp;&nbsp;<i class="settings large icon"></i>
		        <div class="menu">
		        	<%= link_to "Setting", user_profile_path(current_user.id), class: "item" %>
		          <%= link_to "Logout", destroy_user_session_path, method: :delete, class: "item" %>
		        </div>
		      </div>
		    </div>
		  </div>
		</div>
		<div class="pusher">
			<!-- message -->
			<% unless devise_error_messages!.blank? %>
			  <div class="ui warning message asd borderless" style="margin-left: 300px; margin-top: 20px; margin-right: 30px; -webkit-transition-duration: 0.1s; overflow-x: auto; <%= 'padding-left: 30px;' if params[:controller] == 'tickets' %>">
			    <i class="close icon"></i>
			    <div class="header">
			      <%= devise_error_messages! %>
			    </div>
			  </div>
			<% end %>
			<% flash.each do |key, message| %>
			  <div class="ui warning message asd borderless" style="margin-left: 300px; margin-top: 20px; margin-right: 30px; -webkit-transition-duration: 0.1s; overflow-x: auto; <%= 'padding-left: 30px;' if params[:controller] == 'tickets' %>">
			    <i class="close icon"></i>
			    <div class="header">
			      <%= message %>
			    </div>
			  </div>
			<% end %>
			<div class="ui menu asd borderless" style="margin-left: 300px; margin-top: 20px; margin-right: 30px; -webkit-transition-duration: 0.1s; <%= 'overflow-x: auto;' unless params[:controller] == 'dashboard' %> <%= 'padding: 20px;' if params[:controller] == 'dashboard' %> <%= 'padding-left: 30px;' if params[:controller] == 'tickets' %>">
			  <%= yield %>
			</div>
		</div>
  <% end %>
</body>
<script type="text/javascript">
	<% unless current_user.nil? %>
		$(".ui .custom").click(function(){
	    $("#notifications_count_" + <%= current_user.id %>).find("i").addClass("bell outline large icon")
	    $("#count").text("0")
	  })
  <% end %>
</script>
</html>