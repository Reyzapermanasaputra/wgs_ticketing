<div class="ui container">
  <br/>
  <div class="ui segment">
  <h3>Forms Credential</h3>
  <%= form_for([@project, @credential], url: project_credentials_path(@project),  html: {class: "ui form"}) do |f| %>
    <div class="field">
      <label>Title</label>
      <%= f.text_field :title, placeholder: "Title" %>
    </div>
    <div class="field">
      <label>Body</label>
      <%= f.cktext_area :body, placeholder: "Body" %>
    </div>
    <p>
      <%= f.submit "Save", class: "ui button" %>
      <%= link_to "Back", projects_path, class: "ui button" %>
    </p>
  <% end %>
  </div>
</div>