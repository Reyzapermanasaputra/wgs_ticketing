<table class="ui celled table form" id="table_roles">
  <thead>
    <tr>
      <th>Name</th>
      <th>Code</th>
      <th>Is Active ?</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
  <% @roles.each_with_index do |role, index| %>
      <tr id="role_<%= role.id %>">
        <td><%= role.name %></td>
        <td><%= role.code %></td>
        <td><%= role.is_active %></td>
        <td>
          <%= link_to edit_role_path(role.id) do %><i class="edit icon"></i>Edit
          <% end %>
          |
          <%= link_to role_path(role.id), method: :delete, data: { confirm: 'Are You Sure ?'} do %>
            <i class="remove icon"></i>Delete
          <% end %>
        </td>
      </tr>
  <% end %>
  </tbody>
  <tfoot class="full-width">
    <tr>
      <th colspan="5">
          <%= link_to new_role_path do %>
            <i class="add square icon"></i>Add Role
          <% end %>
      </th>
    </tr>
  </tfoot>
</table>

<script type="text/javascript">
	$(function(){
		$('.ui.checkbox')
		  .checkbox()
		;
	})
</script>