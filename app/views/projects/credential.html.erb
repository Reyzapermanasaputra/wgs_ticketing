<div class="tabs">
  <ul id="tabs-nav">
    <li><%= link_to "Project", project_path(@project.id) %></li>
    <% if current_user.role.code.eql?("PM") %>
      <li><%= link_to "Developers", project_developers_path(@project.id) %></li>
    <% end %>
    <li><%= link_to "Client", project_client_path(@project.id) %></li>
    <li class="active"><%= link_to "Credential", project_credentials_path(@project.id) %></li>
    <li><%= link_to "Documents", project_documents_path(@project.id) %></li>
  </ul> <!-- END tabs-nav -->
  <div id="tabs-content">
    <div id="tab4" class="tab-content">
      <% if @check_credential %>
        <%= render 'projects/credential/credential_form'%>
      <% else %>
        <h2><%= @credential.title %> </h2>
        <p><%= raw(@credential.body) %></p>
        <p>
        	<%= link_to "Edit", edit_project_credential_path(@project.id, @credential.id), class: "ui button" %>
        	<%= link_to "Back", projects_path, class: "ui button" %>
        </p>
      <% end %>
    </div>
  </div> <!-- END tabs-content -->
</div> <!-- END tabs -->