<table class="ui selectable celled table">
  <thead>
    <tr>
      <th>No</th>
      <th>Project</th>
      <th>Description</th>
      <th>Client</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
  <% @projects.each_with_index do |project, index| %>
    <tr>
      <td><%= index+1 %></td>
      <td><%= link_to project.name, project_path(project.id)%></td>
      <td><%= project.description.truncate(20) %></td>
      <td><%= project.clients.last.name %></td>
      <td>
        <%= link_to edit_project_path(project.id), class: "ui basic" do %>
          <i class="address card outline icon"></i>
        <% end %>
        <%= link_to project_path(project.id), method: :delete, data: {confirm: "Are You Sure ?"}, class: "ui basic" do %>
          <i class="remove icon"></i>
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
  <tfoot class="full-width">
    <tr>
      <th colspan="5">
          <%= link_to new_project_path, class: "ui basic" do %>
            <i class="add square icon"></i>Add Project
          <% end %>
      </th>
    </tr>
  </tfoot>
</table>