<table class="ui selectable celled table">
  <thead>
    <tr>
      <th>No</th>
      <th>Project</th>
      <th>Description</th>
      <th>Client</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
  <% @projects.each_with_index do |project, index| %>
    <tr>
      <td><%= index+1 %></td>
      <td><%= project.name %></td>
      <td><%= project.description %></td>
      <td><%= project.clients.count %></td>
      <td></td>
    </tr>
  <% end %>
  </tbody>
  <tfoot class="full-width">
    <tr>
      <th colspan="5">
          <%= link_to new_project_path, class: "ui basic" do %>
            <i class="add square icon"></i>Add Project
          <% end %>
      </th>
    </tr>
  </tfoot>
</table>