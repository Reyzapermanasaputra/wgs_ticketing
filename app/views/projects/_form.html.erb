<div class="ui container"> 
  <br/>
  <div class="ui segment">
    <% if @project.errors.present? %>
      <div class="ui form">
        <div class="ui message">
          <i class="close icon"></i>
          <div class="header">We had some issues</div>
          <% @project.errors.full_messages.each do |msg| %>
          <ul class="list">
            <li><%= msg  %></li>
          </ul>
          <% end %>
        </div>
      </div>
    <% end %>
  <h3>Forms Project</h3>
  <%= form_for @project, html: {class: "ui form"} do |f| %>
    <div class="field">
      <label>Project Name</label>
      <%= f.text_field :name, placeholder: "Project Name" %>
    </div>
    <div class="field">
      <label>Description</label>
      <%= f.text_area :description, placeholder: "Description" %>
    </div>
    <div class="ui segment">
    <div class="field">
    <div class="ui checkbox">
      <%= f.check_box :is_active, class:"hidden", tabindex: "0" %>
      <label>Is Active ?</label>
    </div>
  </div>
  </div>
    <%= f.fields_for :clients do |client_form| %>
        <%= render 'client_fields', client_form: client_form %>
    <% end %>
    <p>
      <%= link_to_add_fields "Add Client", f, :clients %>
      <%= f.submit "Save", class: "ui button" %>
      <%= link_to "Back", projects_path, class: "ui button" %>
    </p>
  <% end %>
  </div>
</div>