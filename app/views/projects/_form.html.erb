<div class="ui container"> 
  <br/>
  <div class="ui segment">
    <h3>Forms Project</h3>
    <%= form_for @project, html: {class: "ui form"} do |f| %>
      <div class="field">
        <label>Project Name</label>
        <%= f.text_field :name, placeholder: "Project Name" %>
      </div>
      <div class="field">
        <label>Description</label>
        <%= f.cktext_area :description, placeholder: "Description" %>
      </div>
      <div class="ui segment">
        <div class="field">
          <div class="ui checkbox">
            <%= f.check_box :is_active, class:"hidden", tabindex: "0" %>
            <label>Is Active ?</label>
          </div>
        </div>
      </div>
      <%= f.fields_for :clients do |client_form| %>
          <%= render 'client_fields', client_form: client_form %>
      <% end %>
      <!-- <p>
        <%#= link_to_add_fields "Add Client", f, :clients %>
      </p> -->
      <p>
        <%= f.submit "Save", class: "ui positive button" %>
        <%= link_to "Back", projects_path, class: "ui orange button" %>
      </p>
    <% end %>
  </div>
</div>