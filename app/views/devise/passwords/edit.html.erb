<div class="ui middle aligned center aligned grid">
  <div class="column">
    <%= render "devise/shared/logo" %>
    <h2 class="ui image header">
      <div class="content">
        Change your password
      </div>
    </h2>

    <% unless devise_error_messages!.blank? %>
      <div class="ui warning message">
        <i class="close icon"></i>
        <div class="header">
          <%= devise_error_messages! %>
        </div>
      </div>
    <% end %>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "ui large form" }) do |f| %>
      <%= f.hidden_field :reset_password_token %>
      <div class="ui stacked secondary  segment">
        <div class="field">
          <div class="ui left icon input">
            <i class="user icon"></i>
            <%= f.password_field :password, placeholder: "New password #{@minimum_password_length} characters minimum" %>
          </div>
        </div>
        <div class="field">
          <div class="ui left icon input">
            <i class="user icon"></i>
            <%= f.password_field :password_confirmation, placeholder: "Confirm new password" %>
          </div>
        </div>
        <%= f.submit "Save my profile", class: "ui fluid large blue submit button" %>
      </div>
    <% end %>

    <div class="ui message">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
