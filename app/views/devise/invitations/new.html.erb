<%= form_for resource, :as => resource_name, :url => invitation_path(resource_name), :html => {:method => :post, class: "ui form"} do |f| %>
  <div class="field">
    <%= f.label :username %>
    <%= f.text_field :username, placeholder: "Username" %>
  </div>
  <div class="field">
    <% resource.class.invite_key_fields.each do |field| -%>
      <%= f.label :email %>
      <%= f.email_field :email, autocomplete: "email", placeholder: "Email" %>
    <% end -%>
  </div>
  <div class="field">
    <label>Roles</label>
    <%= f.select :role_id, options_from_collection_for_select(Role.all, "id", "name"), {:prompt => 'Select Role'} %>
  </div>
  <div class="field">
    <div class="ui checkbox">
      <%= f.check_box :is_active, tabindex: "0", class: "hidden"%>
      <label>Is Active ?</label>
    </div>
  </div>
  <button class="ui button" type="submit">Submit</button>
<% end %>