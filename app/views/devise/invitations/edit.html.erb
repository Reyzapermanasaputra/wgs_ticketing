<div class="ui cards" style="margin-left: 500px; margin-top: 200px;">
  <div class="card">
    <div class="content">
      <div class="header">Set Your Password</div>
      <div class="description">
        <%= form_for resource, :as => resource_name, :url => invitation_path(resource_name), :html => { :method => :put, class: "ui form" } do |f| %>
				  <%= devise_error_messages! %>
				  <%= f.hidden_field :invitation_token, readonly: true %>

				  <% if f.object.class.require_password_on_accepting %>
				    <div class="field">
					    <p><%= f.label :password %><br />
					    <%= f.password_field :password, placeholder: "Password" %>
					  </div>
					  <div class="field">
					    <p><%= f.label :password_confirmation %><br />
					    <%= f.password_field :password_confirmation, placeholder: "Password Confirmation" %>
					  </div>
				  <% end %>
				  <%= f.submit class: "ui button"%>
				<% end %>

      </div>
    </div>
  </div>
</div>